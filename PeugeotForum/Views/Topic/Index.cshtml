@using PeugeotForum.Models

@model CreateTopicViewModel

@{
    ViewBag.Title = "Ask a question";
}

<h2>Ask a Question</h2>
@using (Html.BeginForm("CreateTopic", "Topic", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", id = "titleCreateTopic" })
            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", id = "contentCreateTopic" })
            @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
            <input type="submit" class="btn-primary btn-block" value="Ask!" />
        </div>
    </div>
}
